<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".shopListItems">

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/shopCart"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_shopping_cart"
        android:layout_margin="40dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shopCart"
        android:text="Choose Items"
        android:textSize="35dp"
        android:id="@+id/chooseItemText"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="25dp"
        android:weightSum="100"
        android:id="@+id/searchItemBox"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/chooseItemText"
        android:layout_marginRight="20dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/filterback"
            android:scaleType="centerCrop"
            />


        <EditText
            android:background="@drawable/searchback"
            android:hint="Search Your Items..."
            android:layout_width="0dp"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="90" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_marginLeft="10dp"
            android:layout_height="55dp"
            android:background="@drawable/searchiconback"
            android:layout_weight="10" />

    </LinearLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:columnCount="2"
        android:layout_below="@id/searchItemBox"/>

</RelativeLayout>